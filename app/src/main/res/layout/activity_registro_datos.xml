<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    tools:context=".activities.client.RegistroDatos">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/iconrecurso" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Ingresa tus datos"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/verde"
            android:fontFamily="@font/gilroy_bold"
            android:layout_marginTop="10dp"
            android:textSize="22sp"  />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textImpuRegistroNombre"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/white"
                android:hint=" Nombre Completo..."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:inputType="text">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textImpuRegistroCelular"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/white"
                android:hint=" Numero celular..."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:inputType="text">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textImputRegistroCorreo"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/white"
                android:hint=" Correo electronico..."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:inputType="textEmailAddress">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textImputRegistroPassword"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/white"
                android:hint=" Contraseña..."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:inputType="textPassword">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="*Recomendamos que tu contraseña contenga letras, números y simbolos"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/gilroy_light"
            android:layout_marginTop="15dp"
            android:textSize="18sp"  />
        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/verde"
            android:fontFamily="@font/gilroy_bold"
            android:text="Finalizar"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>